<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Config">
    <CVS>$Id: TicketBarcode.xml,v 1.55 2011/08/24 08:42:06 ud Exp $</CVS>
    <ConfigItem Name="TicketBarcode::BarcodeType" Required="1" Valid="1">
        <Description Translatable="1">Type of barcode generated for the tickets.</Description>
        <Group>TicketBarcode</Group>
        <SubGroup>Barcode</SubGroup>
        <Setting>
            <Option SelectedID="EAN13">
                <Item Key="EAN8">EAN8</Item>
                <Item Key="EAN13">EAN13</Item>
                <Item Key="QRcode">QR</Item>
                <Item Key="Code39">Code39</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="TicketBarcode::BarcodeAttribute" Required="1" Valid="1">
        <Description Translatable="1">Attribute that is encoded in the barcode.</Description>
        <Group>TicketBarcode</Group>
        <SubGroup>Barcode</SubGroup>
        <Setting>
            <String Regex="">TicketID</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="TicketBarcode::BarcodeTicketURL" Required="0" Valid="0">
        <Description Translatable="1">Encode ticket URL in the barcode (overrides TicketBarcode::BarcodeAttribute and only usable with QR codes).</Description>
        <Group>TicketBarcode</Group>
        <SubGroup>Barcode</SubGroup>
        <Setting>
            <Option SelectedID="0">
                <Item Key="0" Translatable="1">No</Item>
                <Item Key="1" Translatable="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="TicketBarcode::RebuildBarcode" Required="1" Valid="1">
        <Description Translatable="1">The barcode should be rebuilt when the barcode type and/or the value of the attribute (or the attribute itself) changed.</Description>
        <Group>TicketBarcode</Group>
        <SubGroup>Barcode</SubGroup>
        <Setting>
            <Option SelectedID="1">
                <Item Key="0" Translatable="1">No</Item>
                <Item Key="1" Translatable="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="TicketBarcode::BarcodeHeight" Required="1" Valid="1">
        <Description Translatable="1">Height of the barcode image.</Description>
        <Group>TicketBarcode</Group>
        <SubGroup>Barcode</SubGroup>
        <Setting>
            <String Regex="">80</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="TicketBarcode::Factor" Required="1" Valid="1">
        <Description Translatable="1">Factor for the barcode image.</Description>
        <Group>TicketBarcode</Group>
        <SubGroup>Barcode</SubGroup>
        <Setting>
            <String Regex="^[0-9]+$">2</String>
        </Setting>
    </ConfigItem>
</otrs_config>
